{
  "name": "generate-dotenv",
  "private": true,
  "description": "Generates a dotenv file within GitHub Actions.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts --license licenses.txt",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iacobfred/generate-dotenv.git"
  },
  "keywords": [
    "Actions",
    "dotenv",
    "GitHub"
  ],
  "author": "Jacob Fredericksen <jacob.t.fredericksen@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iacobfred/generate-dotenv/issues"
  },
  "homepage": "https://github.com/iacobfred/generate-dotenv#readme",
  "dependencies": {
    "@actions/artifact": "^2.0.0",
    "@actions/cache": "^3.2.2",
    "@actions/core": "^1.10.1",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@jest/types": "^29.2.0",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/parser": "^5.54.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.38.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.1",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.8.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
